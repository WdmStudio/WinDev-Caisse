<ticket>
    <img src="logo.bmp"></img>
    <br></br>
    <h1>Duplicata Ticket</h1> <!-- Titre -->
    <br></br>
    <b align="center" ><span if="Header.IDClients&lt;&gt;0">Client:</span> {Client.firstname} {Client.lastname}</b>
    <b align="center">Date : { DATE } {HEURE}</b>
    <b align="center">Fait le {OriginDate}</b>
    <b align="center">Servi par {Cashier.Firstname|upper}</b>
    <b align="center">Ticket {Header.IDPointOfSale}-{Header.TicketNumber}</b>
    <br></br>
    <table parameter="detsheets" nohead="1"> <!-- Table avec valeur dynamique -->
        <thead> <!-- Entete -->
            <tr>
                <th width="100">Nom</th> <!-- Taille de 10% -->
            </tr>
            <tr> <!-- Premiere ligne -->
                <th width="65" align="left">Unité</th> <!-- Taille de 30% aligne a gauche -->
                <th width="35" align="right">Total</th> <!-- Taille de 60% -->
            </tr>
        </thead>
        <tbody if="Type=sous_total"> <!-- Vue que les valeurs sont dynamique, le contenu de tbody est répété pour chaque ligne dans le paramètre -->
            <tr>    
                <td><br></br><span>Sous-Total {ProductName} </span><b>{TTCBrutPrice|toPrice}€</b><br></br></td> <!-- Sequence commençant par 1 -->
            </tr>
        </tbody>
        <tbody> <!-- Vue que les valeurs sont dynamique, le contenu de tbody est répété pour chaque ligne dans le paramètre -->
            <tr>    
                <td><b if="TR=1">*&#032;</b><b if="Man=1">MAN&#032;</b><span if="UniteType=1">{Quantity|toInt} {UniteName}</span><span if="UniteType&lt;&gt;1">{Quantity|toWeight} {UniteName}</span> x <span>{ProductName}</span></td> <!-- Sequence commençant par 1 -->
            </tr>
            <tr>
                <td>&#032;&#032;&#032;&#032;&#032;{UnitTTCPrice|toPrice}€ / {UniteName}</td> <!-- Affichage de variable -->
                <td>{TTCBrutPrice|toPrice}€</td> <!-- Condition sur l'affichage de MAN -->
            </tr>
        </tbody>
    </table>

    <br></br>
    <b if="TTCTicketRestaurant&lt;&gt;1">* Éligible TR = {TTCTicketRestaurant|toPrice}€</b> <!-- Ticket Restaurant -->
    <br></br>

    <h1 align="center">TOTAL = {Header.TTCPrice|toPrice}€</h1>
    
    <table parameter="vats" nohead="0"> <!-- Table avec valeur dynamique -->
        <thead> <!-- Entete -->
            <tr> <!-- Premiere ligne -->
                <th width="70"> </th> <!-- Taille de 10% -->
                <th width="30" align="right"></th> <!-- Taille de 30% aligne a gauche -->
            </tr>
        </thead>
        <tbody> <!-- Vue que les valeurs sont dynamique, le contenu de tbody est répété pour chaque ligne dans le paramètre -->
            <tr>
                <td><span if="iSeq1=1">Dont&#032;</span><span if="iSeq1&lt;&gt;1">&#032;&#032;&#032;&#032;&#032;</span><span>{TvaName}</span></td> <!-- Sequence commençant par 1 -->
                <td>{TTCPrice|toPrice}€</td> <!-- Condition sur l'affichage de MAN -->
            </tr>
        </tbody>
    </table>

    <!-- paiements --><br></br>
    <table parameter="payments" nohead="1"> <!-- Table avec valeur dynamique -->
        <thead> <!-- Entete -->
            <tr> <!-- Premiere ligne -->
                <th width="60"> </th> <!-- Taille de 10% -->
                <th width="40" align="right"></th>
            </tr>
        </thead>
        <tbody> <!-- Vue que les valeurs sont dynamique, le contenu de tbody est répété pour chaque ligne dans le paramètre -->
            <tr>
                <td>{ProductName}</td> <!-- Affichage de variable -->
                <td>{TTCPrice|toPrice}€</td> <!-- Condition sur l'affichage de MAN -->
            </tr>
        </tbody>
    </table>
    <br></br>
    <b if="Store.Name&lt;&gt;" align="center">{Store.Name}</b>
    <b if="Store.Address&lt;&gt;" align="center">{Store.Address}</b>
    <b if="Store.AddressComp&lt;&gt;" align="center">{Store.AddressComp}</b>
    <b if="Store.PostalCode&lt;&gt;" align="center">{Store.PostalCode}</b>
    <b if="Store.City&lt;&gt;" align="center">{Store.City|upper}</b>
    <b if="Store.Siret&lt;&gt;" align="center">SIRET {Store.Siret|upper}</b>
    <br></br>
    <barcode type="code128" text="below">{Barcode}</barcode> <!-- Impression ean13 avec texte au dessus -->
    <br></br>
    <br></br>
    <br></br>
    <br></br>
    <break/><!-- Coupure du ticket -->
</ticket>

